
@{
    ViewData["Title"] = "Interfaces";
}


    <form asp-action="Procesar" asp-controller="Interfaces">
        <fieldset class="form-group">
            <h6>Interfaces Nómina</h6>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="option" id="opt1" value="1" checked>
                        <label class="form-check-label" for="gridRadios1">
                            Asientos Contables
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="option" id="opt2" value="2">
                        <label class="form-check-label" for="gridRadios2">
                            Acreditación de Salarios
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="option" id="opt3" value="3">
                        <label class="form-check-label" for="gridRadios3">
                            Productos Internos
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="option" id="opt4" value="4">
                        <label class="form-check-label" for="gridRadios2">
                            Cheques a IBS
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="option" id="opt5" value="5">
                        <label class="form-check-label" for="gridRadios3">
                            Acreditación Beneficios
                        </label>
                    </div>
                </div>
            </div>
            <br />
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <input type="submit" name="Aceptar" value="Aceptar" class="btn btn-primary" asp-action="Aceptar" />
                            <input type="submit" name="Cancelar" value="Cancelar" class="btn btn-primary" asp-action="Index" />
                        </div>
                    </div>
                    @*<div class="col-sm-6">
                        <div class="form-group ">
                            <input type="submit" name="Cancelar" value="Cancelar" class="btn btn-primary" asp-action="Index" />
                        </div>
                    </div>*@
                </div>
            </div>
        </fieldset>
    </form>

