@model List<Cheque>;


@section Styles{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
}

@{
    ViewData["Title"] = "Cheques a IBS";
    List<DescuentoTarjeta> tars = ViewBag.tars;
}

<h6>Cheques a IBS</h6>
<hr />

<div class="row">
    <div class="text-danger">
        @if (ViewBag.Errores != null)
        {
            <ul>
                @foreach (string item in ViewBag.Errores)
                {
                    <li>@item.ToString()</li>
                }
            </ul>
        }
    </div>
    <div class="text-success">
        @if (ViewBag.Mensaje != null)
        {
            <ul>
                <li>@ViewBag.Mensaje</li>
            </ul>
        }
    </div>
</div>

<form asp-action="LoginCheques" method="post">
    <div class="row">
        <div class="col-sm-12">
            <div class="datatable">
                <table class="table table-bordered table-striped" id="Tabla">
                    <thead>
                        <tr>
                            <th class="text-sm-center">Cheque</th>
                            <th class="text-sm-center">Acreedor</th>
                            <th class="text-sm-center">Monto</th>
                            <th class="text-sm-center">Débito</th>
                            <th class="text-sm-center">Cédito</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            
                            for (int i = 0; i < Model.Count(); i++)
                            {
                                <tr>
                                    <td class="text-sm-left">@Model[i].cheque</td>
                                    <td class="text-sm-left">@Model[i].nombre</td>
                                    <td class="text-sm-right">@Model[i].monto.ToString("C")</td>
                                    <td class="text-sm-left">@Model[i].debito</td>
                                    <td class="text-sm-left">@Model[i].credito</td>
                                </tr>
                                
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @* <br /> *@
    <hr/>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <input type="submit" name="Regresar" value="Regresar" class="btn btn-primary float-left" asp-action="Index" />
                <input type="submit" name="LoginPI" value="Procesar Cheques" class="btn btn-danger float-right" asp-action="LoginCheques" />
            </div>
        </div>
    </div>


</form>


@section Scripts {
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>

}



