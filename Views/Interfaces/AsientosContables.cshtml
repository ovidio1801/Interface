@model List<AsientoDet>;

@{ 
    AsientoEnc Enc = ViewBag.Enc;
}

@section Styles{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
}

@{
    ViewData["Title"] = "Asientos Contables";
}

<h6>Asientos Contables</h6>
<hr />

<form asp-action="Index" method="post">

    <div class="row">
        <div class="col-sm-6">
            <div class="text-success">
                @if (ViewBag.Mensaje != null)
                {
                    <ul>
                        <li>@ViewBag.Mensaje</li>
                    </ul>
                }
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <input type="submit" name="Aceptar" value="Aceptar" class="btn btn-success float-right" asp-action="AsientosContables" />
            </div>
        </div>

    </div>
    <br />
    <div class="row">
        <div class="col-sm-12">
            <div class="datatable">
                <table class="table table-bordered table-striped" id="tblCheques">
                    <thead>
                        <tr style="background: #f2f2f2">
                            <th colspan="3">Encabezado del Asiento</th>
                        </tr>
                        <tr>
                            <th class="text-sm-center">Fecha</th>
                            <th class="text-sm-center">Grupo Calendario</th>
                            <th class="text-sm-center">Concepto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-sm-center">@Enc.ca_fec_asiento <input type="hidden" asp-for="@Enc.ca_fec_asiento" /></td>
                            <td class="text-sm-center">@Enc.cal_run_id<input type="hidden" asp-for="@Enc.cal_run_id" /></td>
                            <td class="text-sm-center">@Enc.ca_concepto <input type="hidden" asp-for="@Enc.ca_concepto" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="datatable">
                <table class="table table-bordered table-striped" id="tblCheques">
                    <thead>
                        <tr style="background: #f2f2f2">
                            <th colspan="3">Detalle del Asiento</th>
                        </tr>
                        <tr>
                            <th class="text-sm-center">Cuenta</th>
                            <th class="text-sm-center">Débito</th>
                            <th class="text-sm-center">Crédito</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            for (int i = 0; i < Model.Count(); i++)
                            {
                        <tr>
                            <td class="text-sm-center">@Model[i].ca_cod_cta</td>
                            <td class="text-sm-right">@Model[i].ca_deb_local.ToString("C")</td>
                            <td class="text-sm-right">@Model[i].ca_crd_local.ToString("C")</td>
                            @*<td class="text-sm-center">@Model[i].ca_cod_cta<input type="hidden" asp-for="@Model[i].ca_cod_cta" /></td>
                            <td class="text-sm-right">@Model[i].ca_deb_local.ToString("C")<input type="hidden" asp-for="@Model[i].ca_deb_local" /></td>
                            <td class="text-sm-right">@Model[i].ca_crd_local.ToString("C") <input type="hidden" asp-for="@Model[i].ca_crd_local" /></td>*@
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />  
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <input type="submit" name="Regresar" value="Regresar..." class="btn btn-primary float-right"  asp-action="Index"/>
            </div>
        </div>

    </div>
    <br />


</form>


